<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.neovisionaries.android.basesample"
    android:versionCode="010000"
    android:versionName="1.0.0">

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".SampleApplication"
        android:label="@string/application_name"
        android:icon="@drawable/application_icon"
        android:allowBackup="true">

        <activity android:name=".RootActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ExitActivity"/>
        <activity android:name=".FBAuthorizationActivity"/>
        <activity android:name=".HomeActivity"/>
        <activity android:name=".OAuth20AuthorizationActivity" android:screenOrientation="nosensor"/>
        <activity android:name=".RestartActivity"/>
    </application>

</manifest>

